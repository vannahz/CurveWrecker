<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/bgcolor"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.hku.jieying.attackoncurvewrecker.Register">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <ImageView
        android:id="@+id/img_avatar"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/img_avatar"
        android:layout_marginTop="100dp"
        />
        <TextView
            android:textColor="#000000"
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your School"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/img_avatar"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/edt_school"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:textSize="11dp"
            android:hint="school name"
            android:layout_marginTop="12dp"
            android:layout_below="@id/txt_school"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Your character signature"
            android:id="@+id/txt_signature"
            android:layout_below="@id/edt_school"
            android:layout_centerHorizontal="true" />
        <EditText
            android:layout_below="@id/txt_signature"
            android:id="@+id/edt_signature"
            android:background="#ffffff"
            android:layout_width="100dp"
            android:textSize="11dp"
            android:layout_marginTop="12dp"
            android:layout_height="20dp"
            android:hint="your signature"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Birthday"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edt_signature"/>
        <EditText
            android:background="#ffffff"
            android:id="@+id/edt_birthday"
            android:layout_below="@id/txt_birthday"
            android:layout_marginTop="12dp"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp"
            android:editable="false"/>
        <Button
            android:id="@+id/btn_birthday"
            android:layout_below="@id/txt_birthday"
            android:layout_toRightOf="@id/txt_birthday"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:text="select"
            android:textSize="12dp"
            android:layout_width="70dp"
            android:layout_height="35dp" />

        <EditText
            android:background="#ffffff"
            android:layout_below="@id/edt_birthday"
            android:id="@+id/edt_grade"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp"
            android:editable="false"/>
        <Button
            android:id="@+id/btn_grade"
            android:layout_below="@id/btn_birthday"
            android:layout_toRightOf="@id/txt_birthday"
            android:layout_marginLeft="15dp"
            android:text="select"
            android:textSize="12dp"
            android:layout_width="70dp"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="submit"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edt_grade"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</RelativeLayout>
