<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="150dp"
        android:textSize="30dp"
        android:text="Profile"
        android:layout_width="fill_parent"
        android:layout_height="70dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_border"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Avatar"/>

        <ImageView
            android:clickable="true"
            android:layout_marginLeft="230dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img_avatar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_name"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Name"/>
        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_userid"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="UserID"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_border"
            android:id="@+id/txt_setting_message"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Message"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_sex"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Sex"/>
        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_age"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Age"/>

        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_grade"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Grade"/>

        <TextView
            android:background="@drawable/shape_border"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_setting_school"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="School"/>

    </LinearLayout>

</LinearLayout>