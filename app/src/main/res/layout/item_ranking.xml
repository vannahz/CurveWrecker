<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="#fff"
    android:layout_gravity="start">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="1">
        <TextView android:id="@+id/txt_item_ranking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#000"/>
        <hk.hku.cs.curvewrecker.RoundImageView
            android:id="@+id/portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="10dp"
            android:src="@drawable/portrait"
            imagecontrol:border_inside_color="#4292ff"
            imagecontrol:border_outside_color="#6fbdef"
            imagecontrol:border_thickness="1dp"/>
        <TextView
            android:id="@+id/txt_item_ranking_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="Angel"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_item_ranking_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="#FFC125"
        android:textAlignment="viewEnd"
        android:text="130min"
        android:textSize="20sp" />
</LinearLayout>