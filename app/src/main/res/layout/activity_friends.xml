<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_friend_header"
            android:background="@drawable/bgcolor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp"
            android:paddingTop="8dp">
            <TextView
                android:id="@+id/txt_friend_name"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/img_friendavatar"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_friend_name"
                android:background="@drawable/img_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"/>
            <TextView

                android:textColor="#000000"
                android:id="@+id/txt_follower"
                android:layout_below="@id/img_friendavatar"
                android:layout_toLeftOf="@id/img_friendavatar"
                android:text="follower 3"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:textColor="#000000"
                android:id="@+id/txt_fans"
                android:layout_toRightOf="@id/img_friendavatar"
                android:layout_below="@id/img_friendavatar"
                android:text="fans 6"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_below="@id/layout_friend_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_friend_mid"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <Button
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_friends_follow"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="互相关注"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="14dp"
                android:paddingTop="14dp"
                android:id="@+id/layout_information"
                android:layout_below="@id/layout_friend_mid"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lv_friends_information"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#000000"
                    android:dividerHeight="1sp">
                </ListView>
            </LinearLayout>
            
            <LinearLayout
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_below="@id/layout_information"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="150dp"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/img_study_time"
                        android:background="@drawable/img_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/txt_study_time"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_study_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习时间"/>
                    <TextView
                        android:layout_toRightOf="@id/img_study_time"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_study_time"
                        android:text="0 时 17 分"
                        android:textColor="#59d6ff"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/img_answer"
                        android:background="@drawable/img_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/txt_answer"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习时间"/>
                    <TextView
                        android:layout_toRightOf="@id/img_answer"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_answer"
                        android:text="0 时 17 分"
                        android:textColor="#59d6ff"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
